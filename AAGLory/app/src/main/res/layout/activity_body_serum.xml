<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="679dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="332dp"
                    android:layout_margin="5dp"
                    android:isScrollContainer="true"
                    android:overScrollMode="always"
                    app:srcCompat="@drawable/bodyserum" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:scrollbarSize="0dp"
                    app:cardBackgroundColor="#F7EBEF"
                    app:cardCornerRadius="24dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/JudulAset"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:text="Rekomendasi Body Serum Lavojoy"
                                    android:textColor="#1E1E1E"
                                    android:textSize="23sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView37"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Lavojoy Let It Glow Body Serum Diperkaya dengan perpaduan dengan Niacinamide, Ceramides, Hyaluronic Acid, dan Vitamin E yang dapat mencerahkan kulit, menghidrasi dan mengunci kelembapan yang hilang."
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView38"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="benefit:"
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="1. Brightening"
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Niacinamide memperbaiki tampilan perubahan warna kulit, mencerahkan kulit kusam dan meratakan warna kulit."
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="2. Long-Lasting Hydration"
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Hyaluronic Acid yang dapat mencegah kulit dari dehidrasi dan dapat memberikan kelembapan untuk kulit."
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="3. Strength Skin Barrier"
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Ceramide yang dapat membantu merawat barrier kulit."
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Cara Pakai :"
                                android:textColor="#1E1E1E" />

                            <TextView
                                android:id="@+id/textView26"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Tuangkan secukupnya pada telapak tangan, usap ke area yang diinginkan, pijat dengan lembut dalam lingkaran kecil sampai teresap."
                                android:textColor="#1E1E1E" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>