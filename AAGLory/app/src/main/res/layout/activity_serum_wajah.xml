<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="679dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="332dp"
                    android:layout_margin="5dp"
                    android:isScrollContainer="true"
                    android:overScrollMode="always"
                    app:srcCompat="@drawable/serum" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:scrollbarSize="0dp"
                    app:cardBackgroundColor="#F7EBEF"
                    app:cardCornerRadius="24dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/JudulAset"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:text="Rekomendasi Serum Wajah Sesuai Dengan Jenis dan Kebutuhan Kulit"
                                    android:textSize="23sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="1. Acne" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Buat kalian yang punya masalah kulit beruntusan, berminyak, dan jerawatnya meradang pilih serum yang kandungannya ada salicylic acid/niacinamide, disini aku pakai Somethinc 2% BHA Salicylic Acid dan Neira Acne hack." />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="2. oil serum" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Manfaatnya untuk menjaga elasticity kulit, kalian bisa pilih yang mengandung squalene/roship oil kalo masalah kulit kalian kering, bertekstur / penuaan dini. " />

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="3. Anti-Aging" />

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Buat kalian yang umurnya 20tahun keatas dan punyabtanda-tanda oenuaan dini, pilih serum yang mengandung retinol, kalo gak cocok pakai retinol bisa pilih bakuchiol." />

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="4. Calming" />

                            <TextView
                                android:id="@+id/textView26"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Yang punya kulit gampang kemerahan pilih serum yang mengandung ceramide, centella asiatica atau niacinamide." />

                            <TextView
                                android:id="@+id/textView27"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="5. Antioksidan" />

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Fungsinya untuk menangkal radikal bebas, kalau kulit kalian skinbarriernya rusak dan kusam bisa pilih serum yang mengandung Vitamin C, Vitamin A, dan Niacinamide." />

                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="6. Hydrating" />

                            <TextView
                                android:id="@+id/textView30"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Kulit yang kering dan dehidrasi wajib banget pilih serum ya g mengandung hyaluronic acid/glycerin untuk mengunci dan mengikat air di kulit wajah." />

                            <TextView
                                android:id="@+id/textView31"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="7. Brightening" />

                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Kalian yang kulitnya kusam, banyak noda bekas jerawat pilih serum yg kandungannya ada alpha arbutin, vitamin c, dan niacinamide untuk memperlambat produksi melanin." />

                            <TextView
                                android:id="@+id/textView33"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="8. Exfoliating" />

                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:padding="5dp"
                                android:text="Wajib bangey dilakuin 2-3 kali seminggu untuk mencegah pori-pori tersumbat, dan kulit bertekstur bisa pilih serum dengan kandungan AHA dan Salicylic Acid." />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>